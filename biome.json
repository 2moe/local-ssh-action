{
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 4,
    "lineWidth": 80,
    "formatWithErrors": false
  },
  "javascript": {
    "formatter": {
      "trailingCommas": "all"
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": [
      "src/**/*.bs.*js",
      "dist/*js"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noRedundantUseStrict": "warn"
      }
    }
  }
}
